.wrapper
  = render partial: 'header', locals: {page: 'project'}
  .section.section-contacts
    .shell
      .form.form-apply.form-business-card
        .inner-head
          = link_to "Back to your projects", "/projects/list"
        .inner-body
          h3
            = current_user.company + " - " + @project.service.title
          table
            tr
              td
                | Type
                br
                = @project.service.name
              td
                | Size
                br
                = @project.print_pages
              td
                | Total
                br
                = '$' + @project.get_price.to_s
              td
                | Deadline
                br
                = @project.deadline || 'Not set'
        .inner-body
          h3
            | Messages
        .inner-body
          h3
            | Payments
          = link_to "Pay Deposit", "/payments/checkout/" + @project.id.to_s + "/50"
          br
          = link_to "Edit Project", "/projects/" + @project.id.to_s + "/edit"
= render partial: 'footer'
